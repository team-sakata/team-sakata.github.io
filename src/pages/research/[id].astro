---
import Layout from "../../layouts/Layout.astro";
import Header from "../../components/Header.astro";
import Footer from "../../components/Footer.astro";
import { getCollection } from "astro:content";
import { resolvePath } from "../../utils/paths";

export async function getStaticPaths() {
    const researchFocus = await getCollection("research-focus");
    return researchFocus.map((focus) => ({
        params: { id: `focus${focus.data.order}` },
        props: { focus },
    }));
}

const { focus } = Astro.props;
---

<Layout title={`${focus.data.title} | 坂田・森・浅谷・西本研究室`}>
    <Header />

    <main class="main-content">
        <section class="page-header">
            <a
                href="#"
                onclick="history.back(); return false;"
                class="back-link">← 戻る</a
            >
            <h1>{focus.data.title}</h1>
        </section>

        <section class="content-section">
            <div class="research-detail">
                {
                    focus.data.image && (
                        <img
                            src={resolvePath(focus.data.image)}
                            alt={focus.data.title}
                            class="detail-image"
                        />
                    )
                }
                <p class="description">{focus.data.description}</p>
            </div>
        </section>
    </main>

    <Footer />
</Layout>

<style>
    .page-header {
        margin-bottom: 3rem;
    }

    .back-link {
        display: inline-flex;
        align-items: center;
        gap: 0.5rem;
        color: var(--accent);
        text-decoration: none;
        font-size: 0.9rem;
        margin-bottom: 1.5rem;
        transition: transform 0.2s ease;
    }

    .back-link:hover {
        transform: translateX(-4px);
    }

    .page-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
        line-height: 1.4;
    }

    .content-section {
        margin-bottom: 3rem;
    }

    .research-detail {
        display: flex;
        flex-direction: column;
        gap: 2rem;
    }

    .description {
        font-size: 1.05rem;
        color: var(--text-secondary);
        line-height: 1.8;
        padding: 1.5rem;
        background: var(--bg-card);
        border-left: 3px solid var(--accent);
        border-radius: 4px;
    }

    .detail-image {
        width: 100%;
        max-height: 400px;
        object-fit: cover;
        border-radius: 8px;
        border: 1px solid var(--border);
    }
</style>
