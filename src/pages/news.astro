---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import NewsItem from "../components/NewsItem.astro";
import news from "../data/news.yaml";
---

<Layout title="お知らせ | 坂田・森・浅谷・西本研究室">
  <Header />

  <main>
    <section class="page-header">
      <h1>お知らせ</h1>
      <p class="subtitle">News</p>
    </section>

    <div class="news-list">
      {
        news.map((item: { date: string; text: string; link?: string }) => (
          <NewsItem news={item} />
        ))
      }
    </div>
  </main>

  <Footer />
</Layout>

<style>
  main {
    max-width: 1200px;
    margin: 0 auto;
    padding: 8rem 5rem 4rem;
  }

  .page-header {
    margin-bottom: 3rem;
    text-align: center;
  }

  .page-header h1 {
    font-size: 2rem;
    font-weight: 700;
    margin-bottom: 0.5rem;
  }

  .subtitle {
    color: var(--accent);
    font-family: var(--font-serif);
    font-size: 1.1rem;
  }

  .news-list {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }
</style>
