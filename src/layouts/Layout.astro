---
import "../styles/global.css";
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import { detectLocale } from "../utils/paths";

interface Props {
	title: string;
	isSubpage?: boolean;
}

const { title, isSubpage = false } = Astro.props;
const locale = detectLocale(Astro.url.pathname);
---

<!doctype html>
<html lang={locale}>
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<link
			rel="icon"
			type="image/svg+xml"
			href={`${import.meta.env.BASE_URL}/favicon.svg`}
		/>
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
		
		<!-- DNS Prefetch for external domains -->
		<link rel="dns-prefetch" href="https://fonts.googleapis.com" />
		<link rel="dns-prefetch" href="https://fonts.gstatic.com" />
		<link rel="dns-prefetch" href="https://planet.sakatalab.t.u-tokyo.ac.jp" />
		
		<!-- Preconnect to external resources (prioritized) -->
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		
		<!-- Preload critical assets -->
		<link 
			rel="preload" 
			href={`${import.meta.env.BASE_URL}/lab_guidelines_insight.webp`}
			as="image" 
			type="image/webp"
		/>
		<!-- Optimized Google Fonts - reduced weights (400, 500, 700 only) -->
		<link
			href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+JP:wght@400;500;700&family=Inter:wght@400;500;700&display=swap"
			rel="stylesheet"
			media="print"
			onload="this.media='all'"
		/>
		<noscript>
			<link
				href="https://fonts.googleapis.com/css2?family=IBM+Plex+Sans+JP:wght@400;500;700&family=Inter:wght@400;500;700&display=swap"
				rel="stylesheet"
			/>
		</noscript>
	</head>
	<body>
		<Header locale={locale} />
		<main class:list={["main-content", { subpage: isSubpage }]}>
			<slot />
		</main>
		<Footer />

		<!-- Speculation Rules for Chrome/Edge (prerender pages on hover) -->
		<script type="speculationrules">
		{
			"prerender": [
				{
					"where": { "selector_matches": "[data-astro-prefetch]" },
					"eagerness": "moderate"
				}
			],
			"prefetch": [
				{
					"where": { "selector_matches": "a[href^='/']" },
					"eagerness": "moderate"
				}
			]
		}
		</script>

		<!-- Service Worker Registration (works on all browsers including Safari) -->
		<script>
			if ('serviceWorker' in navigator) {
				window.addEventListener('load', () => {
					navigator.serviceWorker.register(`${import.meta.env.BASE_URL}/sw.js`)
						.catch(() => {/* SW registration failed, continue without it */});
				});
			}
		</script>
	</body>
</html>
