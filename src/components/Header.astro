---
import type { Locale } from "../utils/paths";
import {
  buildLocalizedPath,
  detectLocale,
  getLocaleToggleLinks,
} from "../utils/paths";

interface Props {
  locale?: Locale;
}

const { locale: localeProp }: Props = Astro.props;
const currentLocale = localeProp ?? detectLocale(Astro.url.pathname);
const localeLinks = getLocaleToggleLinks(Astro.url.pathname);
const navItems = [
  { key: "research", path: "research", label: { ja: "研究内容", en: "Research" } },
  { key: "members", path: "members", label: { ja: "メンバー", en: "Members" } },
  {
    key: "publications",
    path: "publications",
    label: { ja: "論文リスト", en: "Publications" },
  },
  { key: "activity", path: "activity", label: { ja: "活動紹介", en: "Activities" } },
  { key: "news", path: "news", label: { ja: "ニュース", en: "News" } },
  {
    key: "visit",
    path: "visit",
    label: { ja: "採用/新入生への案内", en: "Visit / Join" },
  },
];
---
---

<header>
  <nav>
    <a href={buildLocalizedPath(currentLocale)} class="logo">

      <span
      class="logo-text"
      style="
        font-size: 1.05rem;
        font-weight: 700;
        background: linear-gradient(120deg, #6f63ff, #2ac4ff);
        -webkit-background-clip: text;
        color: transparent;
      "
      >Sakata Lab</span>
      <span class="logo-text" style="font-weight:600; letter-spacing:0.02em;"
      >{currentLocale === "en" ? "Sakata / Mori / Asatani / Nishimoto Lab" : "坂田・森・浅谷・西本研究室"}</span
      >
      <span class="logo-dept">
      <span
        >{currentLocale === "en" ? "Dept. of Technology Management for Innovation, The University of Tokyo" : "東京大学 工学系研究科 技術経営戦略学専攻"}</span
      >
      </span>
    </a>
    <div class="nav-right">
      <ul class="nav-links">
        {navItems.map((item) => (
          <li>
            <a href={buildLocalizedPath(currentLocale, item.path)}>
              {item.label[currentLocale]}
            </a>
          </li>
        ))}
        <li>
          <a href="https://planet.sakatalab.t.u-tokyo.ac.jp/" target="_blank"
            >Science Planet+</a
          >
        </li>
      </ul>
      <div class="header-actions">
        <div class="lang-switch" aria-label="Language selector">
          <a
            href={localeLinks.ja}
            aria-current={currentLocale === "ja" ? "page" : undefined}
            class:list={{ active: currentLocale === "ja" }}
            >JA</a
          >
          <span class="divider" aria-hidden="true">/</span>
          <a
            href={localeLinks.en}
            aria-current={currentLocale === "en" ? "page" : undefined}
            class:list={{ active: currentLocale === "en" }}
            >EN</a
          >
        </div>
        <div class="mobile-controls">
          <button class="hamburger" aria-label="Menu">
            <span></span>
            <span></span>
            <span></span>
          </button>
        </div>
      </div>
    </div>
    <div class="mobile-menu">
      {navItems.map((item) => (
        <a href={buildLocalizedPath(currentLocale, item.path)}>
          {item.label[currentLocale]}
        </a>
      ))}
      <a href="https://planet.sakatalab.t.u-tokyo.ac.jp/" target="_blank"
        >Science Planet+</a
      >
    </div>
  </nav>
</header>

<script>
  const hamburger = document.querySelector(".hamburger");
  const mobileMenu = document.querySelector(".mobile-menu");
  const menuLinks = document.querySelectorAll(".mobile-menu a");

  if (hamburger && mobileMenu) {
    hamburger.addEventListener("click", () => {
      hamburger.classList.toggle("active");
      mobileMenu.classList.toggle("active");
      document.body.style.overflow = mobileMenu.classList.contains("active")
        ? "hidden"
        : "";
    });

    // Close menu when a link is clicked
    menuLinks.forEach((link) => {
      link.addEventListener("click", () => {
        hamburger.classList.remove("active");
        mobileMenu.classList.remove("active");
        document.body.style.overflow = "";
      });
    });
  }
</script>

<style>
  header {
    position: fixed;
    top: 0;
    left: 0;
    right: 0;
    z-index: 100;
    padding: 1rem 2rem;
    background: rgba(250, 250, 250, 0.92);
    backdrop-filter: blur(12px);
    border-bottom: 1px solid var(--border);
  }

  header nav {
    max-width: 1200px;
    margin: 0 auto;
    display: flex;
    justify-content: space-between;
    align-items: center;
    gap: 1.5rem;
  }

  .logo {
    font-family: var(--font-sans);
    font-size: 0.95rem;
    font-weight: 500;
    color: var(--text-primary);
    text-decoration: none;
    letter-spacing: -0.01em;
    z-index: 101; /* Above mobile menu */
  }

  .logo-text {
    display: block;
    line-height: 1.2;
  }

  .logo-dept {
    font-size: 0.65rem;
    color: var(--text-muted);
    display: block;
    margin-top: 1px;
  }

  .nav-right {
    display: flex;
    align-items: center;
    gap: 1.5rem;
    margin-left: auto;
  }

  .nav-links {
    display: flex;
    gap: 1rem;
    list-style: none;
    margin: 0;
    padding: 0;
  }

  .nav-links a {
    color: var(--text-secondary);
    text-decoration: none;
    font-size: 0.8rem;
    font-weight: 400;
    transition: color 0.2s;
  }

  .nav-links a:hover {
    color: var(--accent);
  }

  .header-actions {
    display: flex;
    align-items: center;
    gap: 0.85rem;
  }

  .lang-switch {
    display: flex;
    align-items: center;
    gap: 0.35rem;
    font-size: 0.78rem;
    letter-spacing: 0.08em;
    text-transform: uppercase;
    color: var(--text-muted);
  }

  .lang-switch a {
    text-decoration: none;
    color: var(--text-muted);
    font-weight: 600;
    padding: 0.15rem 0.35rem;
    border-radius: 999px;
    transition: color 0.2s ease, background 0.2s ease;
  }

  .lang-switch a.active {
    color: var(--text-primary);
    background: rgba(0, 0, 0, 0.06);
  }

  .lang-switch a:hover {
    color: var(--text-primary);
  }

  .lang-switch .divider {
    color: var(--text-muted);
    font-weight: 500;
  }

  .mobile-controls {
    display: flex;
    align-items: center;
  }

  /* Hamburger Menu */
  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-between;
    width: 24px;
    height: 18px;
    background: none;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 101;
  }

  .hamburger span {
    display: block;
    width: 100%;
    height: 2px;
    background-color: var(--text-primary);
    transition: all 0.3s ease;
  }

  .mobile-menu {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100vh;
    background: var(--bg-primary);
    display: flex;
    flex-direction: column;
    justify-content: center;
    align-items: center;
    gap: 2rem;
    opacity: 0;
    pointer-events: none;
    transition: opacity 0.3s ease;
    z-index: 100;
  }

  .mobile-menu.active {
    opacity: 1;
    pointer-events: auto;
  }

  .mobile-menu a {
    font-size: 1.5rem;
    color: var(--text-primary);
    text-decoration: none;
    font-weight: 500;
  }

  /* Hamburger Animation */
  .hamburger.active span:nth-child(1) {
    transform: translateY(8px) rotate(45deg);
  }

  .hamburger.active span:nth-child(2) {
    opacity: 0;
  }

  .hamburger.active span:nth-child(3) {
    transform: translateY(-8px) rotate(-45deg);
  }

  @media (max-width: 1000px) {
    header {
      padding: 0.85rem 1rem;
    }

    .nav-right {
      gap: 0.75rem;
    }

    .nav-links {
      display: none;
    }

    .lang-switch {
      font-size: 0.72rem;
      letter-spacing: 0.05em;
    }

    .hamburger {
      display: flex;
    }
  }
</style>
