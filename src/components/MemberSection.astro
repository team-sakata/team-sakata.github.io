---
import type { CollectionEntry } from "astro:content";
import { resolvePath, buildLocalizedPath, detectLocale } from "../utils/paths";
import FacultyCard from "./FacultyCard.astro";

interface Props {
  section: CollectionEntry<"members">;
  isFirst?: boolean;
}

const { section, isFirst = false } = Astro.props;
const locale = detectLocale(Astro.url.pathname);
const getMemberLink = (id?: string) => (id ? buildLocalizedPath(locale, `members/${id}`) : undefined);
const sectionTitle = locale === "en" ? section.data.titleEn ?? section.data.title : section.data.title;
const labels = {
  researchAreas: locale === "en" ? "Research areas:" : "研究分野:",
  courses: locale === "en" ? "Courses:" : "担当講義:",
};

// Helper function to get localized field
const getLocalized = (member: any, field: string) => {
  if (locale === "en") {
    return member[`${field}En`] ?? member[field];
  }
  return member[field];
};
---

<div class="members-section" style={!isFirst ? "margin-top: 2rem;" : ""}>
  {(<div class="members-section-title">{sectionTitle}</div>)}

  {
    section.data.title === "教員" ? (
      <div class="faculty-grid">
        {section.data.items.map((member: any) => (
          <FacultyCard member={member} />
        ))}
      </div>
    ) : (
      <div class="members-list">
        {section.data.items.map((member: any) => (
          <div class="member">
            {member.image ? (
              <img
                src={resolvePath(member.image)}
                alt={getLocalized(member, 'name')}
                class="member-image"
                loading="lazy"
                decoding="async"
              />
            ) : (
              <div class="member-avatar">{member.avatar}</div>
            )}
            <div class="member-info">
              {member.id ? (
                <a
                  href={getMemberLink(member.id)}
                  class="member-name-link"
                >
                  <div class="member-name">{getLocalized(member, 'name')}</div>
                </a>
              ) : (
                <div class="member-name">{getLocalized(member, 'name')}</div>
              )}
              {(member.role || member.roleEn) && (
                <div class="member-role">
                  {getLocalized(member, 'role')}
                </div>
              )}
              {(member.description || member.descriptionEn) && (
                <p class="member-description">{getLocalized(member, 'description')}</p>
              )}
              {(member.researchAreas || member.researchAreasEn) && (
                <div class="member-meta">
                  <span class="meta-label">{labels.researchAreas}</span>{" "}
                  {getLocalized(member, 'researchAreas')}
                </div>
              )}
              {(member.courses || member.coursesEn) && (
                <div class="member-meta">
                  <span class="meta-label">{labels.courses}</span> {getLocalized(member, 'courses')}
                </div>
              )}
            </div>
          </div>
        ))}
      </div>
    )
  }
</div>

<style>
  .members-section {
    margin-bottom: 2rem;
  }

  .members-section-title {
    font-size: 1.1rem;
    color: var(--text-muted);
    margin-bottom: 1rem;
    font-weight: 500;
    border-bottom: 1px solid var(--border);
    padding-bottom: 0.5rem;
  }

  .members-list {
    display: flex;
    flex-direction: column;
    gap: 0.6rem;
  }

  .member {
    display: flex;
    align-items: center;
    gap: 0.75rem;
  }

  .member-avatar {
    width: 32px;
    height: 32px;
    border-radius: 50%;
    background: var(--bg-secondary);
    border: 1px solid var(--border);
    display: flex;
    align-items: center;
    justify-content: center;
    font-size: 0.7rem;
    color: var(--accent);
    font-weight: 500;
    flex-shrink: 0;
  }

  .member-info {
    flex: 1;
  }

  .member-name {
    font-size: 0.8rem;
    font-weight: 500;
    color: var(--text-primary);
  }

  .member-role {
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  .member-name-link {
    text-decoration: none;
    color: inherit;
  }

  .member-name-link:hover .member-name {
    color: var(--accent);
    text-decoration: underline;
  }

  .member-image {
    width: 60px;
    height: 60px;
    border-radius: 50%;
    object-fit: cover;
    flex-shrink: 0;
    border: 1px solid var(--border);
  }

  .member-description {
    font-size: 0.8rem;
    color: var(--text-secondary);
    margin-top: 0.4rem;
    line-height: 1.6;
  }

  .member-meta {
    font-size: 0.75rem;
    color: var(--text-secondary);
    margin-top: 0.25rem;
    line-height: 1.4;
  }

  .meta-label {
    font-weight: 500;
    color: var(--text-muted);
    margin-right: 0.25rem;
  }

  .faculty-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 1.5rem;
    margin-bottom: 2rem;
  }
</style>
