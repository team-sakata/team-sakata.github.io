---
interface Props {
  pub: {
    title: string;
    authors: string;
    venue: string;
    hidden: boolean;
  };
}

const { pub } = Astro.props;
---

<div class:list={['pub-item', { hidden: pub.hidden }]}>
  <div class="pub-title">{pub.title}</div>
  <div class="pub-meta">{pub.authors} Â· <span class="pub-venue">{pub.venue}</span></div>
</div>

<style>
  .pub-item {
    padding-bottom: 0.85rem;
    border-bottom: 1px solid var(--border);
  }

  .pub-item:last-child {
    border-bottom: none;
    padding-bottom: 0;
  }

  .pub-title {
    font-size: 0.8rem;
    color: var(--text-primary);
    margin-bottom: 0.2rem;
    line-height: 1.5;
  }

  .pub-meta {
    font-size: 0.7rem;
    color: var(--text-muted);
  }

  .pub-venue {
    color: var(--accent);
    font-weight: 500;
  }

  .pub-item.hidden {
    display: none;
  }

  :global(.bento-card.expanded) .pub-item.hidden {
    display: block;
  }

  :global(.bento-card.expanded) .pub-item {
    padding: 1rem;
    background: var(--bg-secondary);
    border-radius: 8px;
    border-bottom: none;
  }
</style>
