---
interface Props {
  title: string;
  class?: string;
  id?: string;
  href?: string;
  label?: string;
}

const { title, class: className, id, href, label } = Astro.props;
---

<article class:list={["bento-card", className]} id={id}>
  {
    href ? (
      <a href={href} class="bento-card-link">
        <div class="card-header">
          {label && <span class="card-label">{label}</span>}
          <div class="title-row">
            <h2 class="card-title">{title}</h2>
            <span class="arrow">â†’</span>
          </div>
        </div>
        <div class="card-content">
          <slot />
        </div>
      </a>
    ) : (
      <div class="bento-card-inner">
        <div class="card-header">
          {label && <span class="card-label">{label}</span>}
          <h2 class="card-title">{title}</h2>
        </div>
        <div class="card-content">
          <slot />
        </div>
      </div>
    )
  }
</article>

<style>
  .bento-card {
    background: var(--bg-card);
    border: 1px solid var(--border);
    border-radius: var(--radius);
    transition: all 0.3s ease;
    display: flex;
    flex-direction: column;
    box-shadow: var(--shadow);
    overflow: hidden;
    position: relative;
  }

  .bento-card:hover {
    background: var(--bg-card-hover);
    border-color: var(--accent-light);
    box-shadow: var(--shadow-hover);
    transform: translateY(-2px);
  }

  .bento-card-link {
    text-decoration: none;
    color: inherit;
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1.5rem;
  }

  .bento-card-inner {
    display: flex;
    flex-direction: column;
    height: 100%;
    padding: 1.5rem;
  }

  .card-label {
    font-size: 0.65rem;
    text-transform: uppercase;
    letter-spacing: 0.15em;
    color: var(--accent);
    margin-bottom: 0.4rem;
    font-weight: 500;
    display: block;
  }

  .title-row {
    display: flex;
    justify-content: space-between;
    align-items: center;
    padding-right: 1.5rem; /* Space for arrow */
  }

  .card-title {
    font-family: var(--font-sans);
    font-size: 1.2rem;
    font-weight: 600;
    line-height: 1.3;
    color: var(--text-primary);
  }

  .arrow {
    position: absolute;
    top: 1.5rem;
    right: 1.5rem;
    font-size: 1.2rem;
    color: var(--accent);
    opacity: 0;
    transform: translateX(-10px);
    transition: all 0.3s ease;
  }

  .bento-card:hover .arrow {
    opacity: 1;
    transform: translateX(0);
  }

  .card-content {
    color: var(--text-secondary);
    font-size: 0.9rem;
    margin-top: 1rem;
    flex-grow: 1;
  }

  /* Grid Spanning Utility Classes */
  .bento-card.large {
    grid-column: span 2;
    grid-row: span 2;
  }
  .bento-card.wide {
    grid-column: span 2;
  }
  .bento-card.tall {
    grid-row: span 2;
  }

  @media (max-width: 900px) {
    .bento-card.large {
      grid-column: span 2;
      grid-row: span 1;
    }
  }

  @media (max-width: 600px) {
    .bento-card.large,
    .bento-card.wide,
    .bento-card.tall {
      grid-column: span 1;
      grid-row: span 1;
    }

    .arrow {
      opacity: 1;
      transform: translateX(0);
    }
  }
</style>
