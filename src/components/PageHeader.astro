---
interface Props {
    title: string;
    subtitle?: string;
}

const { title, subtitle } = Astro.props;
---

<section class="page-header">
    <h1>{title}</h1>
    {subtitle && <p class="subtitle">{subtitle}</p>}
</section>

<style>
    .page-header {
        margin-bottom: 3rem;
        text-align: center;
    }

    .page-header h1 {
        font-size: 2rem;
        font-weight: 700;
        margin-bottom: 0.5rem;
    }

    .subtitle {
        color: var(--accent);
        font-family: var(--font-serif);
        font-size: 1.1rem;
    }
</style>
