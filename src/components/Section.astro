---
interface Props {
    title?: string;
}

const { title } = Astro.props;
---

<section class="content-section">
    {title && <h2>{title}</h2>}
    <slot />
</section>

<style>
    .content-section {
        margin-bottom: 3rem;
    }

    .content-section h2 {
        font-size: 1.4rem;
        color: var(--text-primary);
        margin-bottom: 1rem;
        padding-bottom: 0.5rem;
        border-bottom: 1px solid var(--border);
    }
</style>
